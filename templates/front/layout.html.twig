{% block header %}

{# la barre de navigation #}
    <div>
        <a href="{{path ("front")}}"><img src="{{ asset ("img/logo.png")}}" alt="logo" class="logo"></a>
    </div>
    <nav class="bar_nav">   
        <label for="check" class="menu"><i class="fas fa-bars"></i></label>
        <input type="checkbox" id="check">
