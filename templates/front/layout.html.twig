            <li><a href="{{ path ("gallerie_index")}}">Galerie</a></li>

            {% if app.user %} {# si on est connecté on a un lien de déconnexion / Mon compte#}
               <li><a href="{{path ("mon_compte")}}">Mon compte</a></li> 
                <li><a href="{{path ("app_logout")}}">Déconnexion</a></li>
               
            {% else %}  {# sinon on a un lien Connexion #}
                <li><a href="{{path ("app_login")}}">Connexion</a></li>
            {% endif %}

            {# si l'utlisateur connecté est un admin => afficher ce lien pour aller directement dans l'espace admin #}
            {% if is_granted ('ROLE_ADMIN') %} 
            <li><a href="{{path ("menu_index") }}">Espace admin</a></li>
            {% endif %}
        </ul>

    </nav>


{% endblock %}
