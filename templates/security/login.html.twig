{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset ("css/style_front.css")}}">
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h2>Connexion</h2>
<div class="form">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <label for="inputEmail" class="text">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

    <label for="inputPassword" class="text">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
   

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label  class="text">
                <input type="checkbox" name="_remember_me" >  Se souvenir de moi
            </label>
        </div>
   

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
    <p class="text"> Si vous n'êtes pas encore inscrit, je vous invite à effectuer votre inscription juste en cliquant sur ce lien  
        <a href="{{ path ("user_new")}}">Inscription</a>
    </p>
    
   
    <p class="text">Pour revenir à <a href="{{path ("front")}}">Acceuil</a></p>
    </div>
{% endblock %}
