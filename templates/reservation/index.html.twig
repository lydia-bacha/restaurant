{% extends 'admin/layout.html.twig' %}

{% block title %}La liste des reservations {% endblock %}

{% block body %}
    <h1>Les réservations </h1>
<p class="text">Voir <a href="{{ path ("calenderier_reservation")}}"> le calenderier des réservations</a>
</p>
{# Tableau des réservation à venir #}
<div class="container-tableau">

    <p class="text"> Les réservations actuelles:</p> 
    <a href="{{ path ("reservation_new")}}"> <button class=" btn btn-success text">Ajouter une réservation</button></a>
    <table class="table table-secondary table-striped">
        <thead>
    <br><br>
            <tr>
                <th>Numéro de réservation</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Date</th>
                <th>Nombre de personnes</th>
                {# <th>Message</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservationsFuture %}
            <tr>
                <td>{{reservation.id}}</td>
                <td>{{ reservation.nom }}</td>
                <td>{{ reservation.prenom }}</td>
                <td>{{ reservation.email }}</td>
                <td>{{ reservation.telephone }}</td>
                <td>{{ reservation.date ? reservation.date|date('d-m-Y')  : '' }}</td>
                <td>{{ reservation.nombreDePersonnes }}</td>
                {# <td>{{ reservation.message }}</td> #}
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}"><button class="btn btn-info"> <i class="far fa-eye"></i></button> </a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"> <button class="btn btn-info"><i class="fas fa-edit"></i></button></a>
                    <button>{{ include('reservation/_delete_form.html.twig') }}</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

